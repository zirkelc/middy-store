{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	},
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noUnusedTemplateLiteral": "off",
				"noNonNullAssertion": "off"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noEmptyInterface": "off"
			},
			"complexity": {
				"noUselessConstructor": "off"
			}
		}
	},
	"overrides": [
		{
			"include": ["*.test.ts"],
			"linter": {}
		}
	]
}
